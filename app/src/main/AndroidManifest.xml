            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Manage.EditSet.Words.AddWords"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Play.Play"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Play.Game.GameView"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Settings.Settings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Manage.EditSet.EditSetName"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.Manage.EditSet.DeleteSet"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>